{
    "name": "pay",
    "version": "2.6.1",
    "private": true,
    "description": "Payment application for ARK and ARK-based bridgechains",
    "license": "MIT",
    "author": "Cryptology",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "yarn lerna bootstrap",
        "build": "yarn lerna run build",
        "clean": "yarn lerna clean --yes",
        "format": "yarn lint && yarn prettier",
        "lerna": "./node_modules/lerna/cli.js",
        "lint": "yarn lerna run lint",
        "prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./packages/**/*.{ts,js,json,md}\"",
        "setup": "yarn && yarn clean && yarn bootstrap && yarn build",
        "snyk": "./node_modules/.bin/snyk protect",
        "test": "snyk test && cross-env CORE_ENV=test jest --runInBand --forceExit",
        "test:coverage": "cross-env CORE_ENV=test jest --coverage --coveragePathIgnorePatterns='/(defaults.ts|index.ts)$' --runInBand --forceExit",
        "version": "cross-env-shell ./scripts/version.sh",
        "deps:missing": "node ./scripts/deps/missing.js",
        "updates": "./node_modules/npm-check-updates/bin/npm-check-updates"
    },

    "jest": {
        "collectCoverageFrom": [
            "packages/**/src/**/*.ts",
            "!**/node_modules/**"
        ],
        "preset": "./jest-preset.json"
    },
    "devDependencies": {
        "@babel/core": "^7.8.4",
        "@babel/preset-env": "^7.8.4",
        "@sindresorhus/tsconfig": "^0.7.0",
        "@types/babel__core": "^7.1.3",
        "@types/body-parser": "^1.19.0",
        "@types/express": "^4.17.2",
        "@types/jest": "^25.1.2",
        "@types/js-yaml": "^3.12.2",
        "@types/node": "^13.7.0",
        "@types/prettier": "^1.19.0",
        "@types/pretty-ms": "^5.0.1",
        "@types/prompts": "^2.4.0",
        "@types/request": "^2.48.4",
        "@types/request-promise": "^4.1.45",
        "@types/rimraf": "^2.0.3",
        "@types/uuid": "^3.4.7",
        "@types/webpack": "^4.41.6",
        "@types/webpack-merge": "^4.1.5",
        "@types/webpack-node-externals": "^1.7.1",
        "babel-loader": "^8.0.6",
        "body-parser": "^1.19.0",
        "codecov": "^3.6.5",
        "cross-env": "^7.0.0",
        "del-cli": "^3.0.0",
        "depcheck": "^0.9.2",
        "docdash": "^1.2.0",
        "express": "^4.17.1",
        "husky": "^4.2.1",
        "jest": "^25.1.0",
        "jest-extended": "^0.11.5",
        "js-yaml": "^3.13.1",
        "lerna": "^3.20.2",
        "lint-staged": "^10.0.7",
        "npm-check-updates": "^4.0.1",
        "prettier": "^1.19.1",
        "prompts": "^2.3.0",
        "regenerator-runtime": "^0.13.3",
        "request": "^2.88.0",
        "request-promise": "^4.2.5",
        "rimraf": "^3.0.2",
        "snyk": "^1.291.0",
        "ts-jest": "^25.2.0",
        "tslint": "^6.0.0",
        "tslint-config-prettier": "^1.18.0",
        "typedoc": "^0.16.9",
        "typescript": "^3.7.5",
        "uuid": "^3.4.0",
        "webpack": "^4.41.6",
        "webpack-cli": "^3.3.10",
        "webpack-merge": "^4.2.2",
        "webpack-node-externals": "^1.7.2"
    }
}
