{
    "name": "pay",
    "version": "2.5.0",
    "private": true,
    "description": "Payment application for ARK and ARK-based bridgechains",
    "license": "MIT",
    "author": "Cryptology",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "yarn lerna bootstrap",
        "build": "yarn lerna run build",
        "clean": "yarn lerna clean --yes",
        "format": "yarn lint && yarn prettier",
        "lerna": "./node_modules/lerna/cli.js",
        "lint": "yarn lerna run lint",
        "prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./packages/**/*.{ts,js,json,md}\"",
        "setup": "yarn && yarn clean && yarn bootstrap && yarn build",
        "snyk": "./node_modules/.bin/snyk protect",
        "test": "snyk test && cross-env CORE_ENV=test jest --runInBand --forceExit",
        "test:coverage": "cross-env CORE_ENV=test jest --coverage --coveragePathIgnorePatterns='/(defaults.ts|index.ts)$' --runInBand --forceExit",
        "version": "cross-env-shell ./scripts/version.sh",
        "deps:missing": "node ./scripts/deps/missing.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "packages/**/src/**/*.ts",
            "!**/node_modules/**"
        ],
        "preset": "./jest-preset.json"
    },
    "devDependencies": {
        "@babel/core": "^7.4.3",
        "@babel/preset-env": "^7.4.3",
        "@sindresorhus/tsconfig": "^0.3.0",
        "@types/babel__core": "^7.1.1",
        "@types/body-parser": "^1.17.0",
        "@types/express": "^4.16.1",
        "@types/jest": "^24.0.11",
        "@types/js-yaml": "^3.12.1",
        "@types/node": "^12.7.8",
        "@types/prettier": "^1.16.3",
        "@types/pretty-ms": "^4.0.0",
        "@types/prompts": "^2.4.0",
        "@types/request": "^2.48.1",
        "@types/request-promise": "^4.1.42",
        "@types/rimraf": "^2.0.2",
        "@types/uuid": "^3.4.4",
        "@types/webpack": "^4.4.27",
        "@types/webpack-merge": "^4.1.4",
        "@types/webpack-node-externals": "^1.6.3",
        "babel-loader": "^8.0.5",
        "body-parser": "^1.18.3",
        "codecov": "^3.3.0",
        "cross-env": "^5.2.0",
        "del-cli": "^1.1.0",
        "depcheck": "^0.8.0",
        "docdash": "^1.1.0",
        "express": "^4.16.4",
        "husky": "^1.3.1",
        "jest": "^24.7.1",
        "jest-extended": "^0.11.1",
        "js-yaml": "^3.13.1",
        "lerna": "^3.13.3",
        "lint-staged": "^8.1.5",
        "npm-check-updates": "^3.1.8",
        "prettier": "^1.17.0",
        "prompts": "^2.0.4",
        "regenerator-runtime": "^0.13.2",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "rimraf": "^2.6.3",
        "snyk": "^1.185.5",
        "ts-jest": "^24.0.2",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "typedoc": "^0.14.2",
        "typescript": "^3.4.4",
        "uuid": "^3.3.2",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.0",
        "webpack-merge": "^4.2.1",
        "webpack-node-externals": "^1.7.2"
    }
}
