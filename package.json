{
    "name": "pay",
    "version": "2.6.1",
    "private": true,
    "description": "Payment application for ARK and ARK-based bridgechains",
    "license": "MIT",
    "author": "Cryptology",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "yarn lerna bootstrap",
        "build": "yarn lerna run build",
        "clean": "yarn lerna clean --yes",
        "format": "yarn lint && yarn prettier",
        "lerna": "./node_modules/lerna/cli.js",
        "lint": "yarn lerna run lint",
        "prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./packages/**/*.{ts,js,json,md}\"",
        "setup": "yarn && yarn clean && yarn bootstrap && yarn build",
        "snyk": "./node_modules/.bin/snyk protect",
        "test": "snyk test && cross-env CORE_ENV=test jest --runInBand --forceExit",
        "test:coverage": "cross-env CORE_ENV=test jest --coverage --coveragePathIgnorePatterns='/(defaults.ts|index.ts)$' --runInBand --forceExit",
        "version": "cross-env-shell ./scripts/version.sh",
        "deps:missing": "node ./scripts/deps/missing.js",
        "updates": "./node_modules/npm-check-updates/bin/npm-check-updates",
        "update": "./node_modules/npm-check-updates/bin/npm-check-updates -u"
    },
    "jest": {
        "collectCoverageFrom": [
            "packages/**/src/**/*.ts",
            "!**/node_modules/**"
        ],
        "preset": "./jest-preset.json"
    },
    "devDependencies": {
        "@babel/core": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "@sindresorhus/tsconfig": "^0.7.0",
        "@types/babel__core": "^7.1.9",
        "@types/body-parser": "^1.19.0",
        "@types/express": "^4.17.7",
        "@types/jest": "^26.0.7",
        "@types/js-yaml": "^3.12.5",
        "@types/node": "^14.0.26",
        "@types/prettier": "^2.0.2",
        "@types/pretty-ms": "^5.0.1",
        "@types/prompts": "^2.4.0",
        "@types/request": "^2.48.5",
        "@types/request-promise": "^4.1.46",
        "@types/rimraf": "^3.0.0",
        "@types/uuid": "^8.0.0",
        "@types/webpack": "^4.41.21",
        "@types/webpack-merge": "^4.1.5",
        "@types/webpack-node-externals": "^2.5.0",
        "babel-loader": "^8.1.0",
        "body-parser": "^1.19.0",
        "codecov": "^3.7.2",
        "cross-env": "^7.0.2",
        "del-cli": "^3.0.1",
        "depcheck": "^1.0.0",
        "docdash": "^1.2.0",
        "express": "^4.17.1",
        "husky": "^4.2.5",
        "jest": "^26.1.0",
        "jest-extended": "^0.11.5",
        "js-yaml": "^3.14.0",
        "lerna": "^3.22.1",
        "lint-staged": "^10.2.11",
        "npm-check-updates": "^7.0.2",
        "prettier": "^2.0.5",
        "prompts": "^2.3.2",
        "regenerator-runtime": "^0.13.7",
        "request": "^2.88.2",
        "request-promise": "^4.2.6",
        "rimraf": "^3.0.2",
        "snyk": "^1.367.0",
        "ts-jest": "^26.1.3",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "^1.18.0",
        "typedoc": "^0.17.8",
        "typescript": "^3.9.7",
        "uuid": "^8.3.0",
        "webpack": "^4.44.0",
        "webpack-cli": "^3.3.12",
        "webpack-merge": "^5.0.9",
        "webpack-node-externals": "^2.5.0"
    }
}
